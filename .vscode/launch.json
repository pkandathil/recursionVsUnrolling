  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Tests With Debugger",
      "type": "node",
      "request": "launch",
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
